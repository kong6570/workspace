  <select id="getOrgTypeListCount" resultType="java.lang.Integer">
  		select count(1) from adm_org_types where  1=1
  		<if test="orgTypeName!=null"> 		
  		 and org_type_name like CONCAT('%',#{orgTypeName,jdbcType=VARCHAR},'%' )  
  		</if> 
  </select>
   
  <!-- 
  	remark:根据条件查询机构类型(分页)
	author:赵云慧
	date:2016-1-20 11:24:13
   -->
	<select id="getOrgTypeList" parameterType="map" resultMap="BaseResultMap">
		select org_type_id,org_type_name,org_desc from adm_org_types
		<if test="orgTypeName!=null">
		where org_type_name like CONCAT('%',#{orgTypeName,jdbcType=VARCHAR},'%' )
  		</if>
		order by org_type_id
		limit #{pageNo, jdbcType=INTEGER} , #{pageSize, jdbcType=INTEGER}
	</select>

